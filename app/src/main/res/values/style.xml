<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StatusView">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="StatusText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">10sp</item>
    </style>
    <style name="PostTitleText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="PostImage">
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="PostAuthorText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
    </style>

    <style name="PostTitleDetailText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PostAuthorDetailText">

        <item name="android:drawablePadding">@dimen/dimen_4</item>
        <item name="drawableTint">@android:color/secondary_text_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
    </style>

    <style name="PostBodyText">
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">@dimen/dimen_4</item>
    </style>

    <dimen name="dimen_4">4dp</dimen>
</resources>